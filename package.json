{
  "name": "proyectop2preubas",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --ci",
    "test:watch": "jest --watch",
    "coverage:report": "jest --coverage && start coverage/lcov-report/index.html"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^30.0.4",
    "supertest": "^7.1.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/backend/setupTests.js"
    ],
    "testTimeout": 15000,
    "globalTeardown": "<rootDir>/backend/jest.teardown.js",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["html", "lcov", "text-summary"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
